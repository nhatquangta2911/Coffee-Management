
@{
    ViewBag.Title = "ProductRestore";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/scripts/jquery-1.10.2.min.js"></script>



<div class="container" style="padding-top: 150px; padding-bottom: 150px;">
    <br /><h2 class="text-center">PRODUCT RESTORE</h2><br />
    <table class="table table-bordered table-responsive" id="table_product">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
        @if (ViewBag.Product != null)
        {
            foreach (var item in ViewBag.Product)
            {
                <tr>
                    <td>@item.name</td>
                    <td>@item.price €</td>
                    <td>
                        <img src="~/UploadFiles/@item.img_product" alt="Alternate Text" style="width: 100px; height: 100px;" />
                    </td>
                    <td>
                        <a href="~/Manager/Undelete_Product/@item.id" class="btn btn-warning" >Restore</a>
                    </td>
                </tr>
            }
        }
    </table>
</div>



<div class="container"  style="padding-top: 150px; padding-bottom: 150px;">
    <br /><h2 class="text-center">TABLE RESTORE</h2><br />
    <table class="table table-bordered table-responsive">
        <tr>
            <th>ID</th>
            <th>SEATS</th>
            <th>ACTION</th>
        </tr>
        @if(ViewBag.Table != null)
        {
            foreach(var item in ViewBag.Table)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.seats</td>
                    <td>
                        <a href="/Manager/RestoreTable/@item.id" class="btn btn-warning">Restore</a>
                    </td>
                </tr>
            }
        }
    </table>
</div>
